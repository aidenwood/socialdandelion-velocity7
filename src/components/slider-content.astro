<!-- Flickity -->
<!-- CSS -->
<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>

<!-- Flickity Custom Styles -->
<style>
.carousel-cell {
  width: 768px;
  max-width: 85vw;
  min-height: 220px;
  margin: 40px 20px;
  padding: 20px 40px;
}

  /* Start Flickity viewport safeguards V3 */
  main { max-width: 100%; }
  .flickity-viewport { min-height: fit-content ; }
  .blog-carousel, .flickity-viewport { max-width: 100vw !important; margin: 0 auto; }
  /* End Flickity viewport safeguards V3 */

/* Glass-card effect dial in, minimal */
#glass-card {
    border-radius: 30px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(30px);
    border: 2px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transition-duration: 200ms;
  }
  #glass-card:hover {
    box-shadow: 0 15px 20px #00000010, 0 15px 20px #00000010;
  }

</style>
<main>
<div class="mt-16 pt-16 mb-8">
  <h2 class="text-2xl md:text-3xl lg:text-5xl font-bold lg:tracking-tight">
    Recent posts and talks.
  </h2>
  <p class="text-sm lg:text-lg max-w-7xl mt-4 text-slate-600">
    We dive deep to learn exactly where your business model succeeds most with your target market to drilldown and iterate improvements towards this goal from all directions.
  </p>
</div>

