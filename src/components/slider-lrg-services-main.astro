import CompleteBrandPack from '../assets/products-sqr/complete-brand-packages.webp';
import BillboardAds from '../assets/products-sqr/sml-billboard-design.webp';


const services = [
  {
    title: "Organic Social Media Management",
    category: "Social Media Management",
    description:
      "Our Organic Social Media Management service offers a comprehensive approach to growing your brand's presence on social media platforms organically. With a focus on strategic planning and content creation, we help your business thrive without relying on paid advertising.",
    imgsrc: VelocityEcomm,
    inclusions: [
      "Customized Social Media Strategy",
      "Content Creation and Scheduling",
      "Community Engagement",
      "Audience Insights and Analytics",
      "Performance Tracking",
      "Monthly Reporting",
    ],
    imgalt: "Organic Social Media Management service for businesses",
    style: "outline",
    btntxt: "Learn More",
    price: "Custom Quote",
    saleprice: "",
    paytype: "ongoing",
    buylink: "/services/organic-social-media-management",
  },
  {
    title: "Social Media Revamp Package",
    category: "Social Media Design",
    description:
      "Our Social Media Revamp Package is designed to give your social media profiles a fresh and eye-catching look. We provide a complete redesign of your social media grids and posts, including customized fonts and licensing. Additionally, we offer one month of social media management to apply the new design and ensure a seamless transition.",
    imgsrc: VelocityLrg,
    inclusions: [
      "Complete Social Media Redesign",
      "Customized Fonts and Licensing",
      "One Month of Social Media Management",
      "Content Deployment",
      "Audience Engagement",
      "Performance Tracking",
    ],
    imgalt: "Social Media Revamp Package for businesses",
    style: "outline",
    btntxt: "Learn More",
    price: "Custom Quote",
    saleprice: "",
    paytype: "once-off",
    buylink: "/services/social-media-revamp-package",
  },
  {
    title: "Engagement Package",
    category: "Social Media Marketing",
    description:
      "Our Engagement Package is designed to increase your social media reach and foster meaningful conversations with your audience. With a wide range of repeatable designs tailored to your target audience, we help your brand stand out and initiate engaging interactions. Discover the power of authentic engagement with our specialized package.",
    imgsrc: VelocitySml,
    inclusions: [
      "Target Audience-focused Design",
      "Engagement-oriented Content Creation",
      "Community Management",
      "Hashtag Strategy",
      "Audience Insights and Analytics",
      "Performance Tracking",
    ],
    imgalt: "Engagement Package for businesses",
    style: "outline",
    btntxt: "Learn More",
    price: "Custom Quote",
    saleprice: "",
    paytype: "ongoing",
    buylink: "/services/engagement-package",
  },
