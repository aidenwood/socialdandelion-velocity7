---

<main class="pt-8 mb-8 md:mb-16">

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mt-4 gap-4 md:gap-8 gap-y-4">
    {
      features.map((item) => (
      <div id="container" class="relative group">
        <div id="cardOuter" class="absolute -inset-1 bg-gradient-to-br from-pink-700 to-purple-700 rounded-lg blur opacity-25 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
        <div id="cardInner" class="relative px-4 py-8 bg-gray-50 hover:bg-gray-100 duration-200 ring-1 ring-gray-300 rounded-lg leading-none flex items-top justify-start space-x-4">
          <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 lg:w-16 lg:h-16 shrink-0">
            <Icon class="text-white" name={item.icon} />
          </div>
          <div>
            <h4 class="font-semibold text-xl">{item.title}</h4>{" "}
            <p class="text-slate-700 group-hover:text-slate-800 mt-2 pr-2 leading-relaxed">{item.description}</p>
          </div>
        </div>
      </div>
      ))
