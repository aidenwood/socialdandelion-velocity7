---
// @ts-ignore
import { Icon } from "astro-icon";
import Link from "@components/ui/link.astro";
import { Picture } from "@astrojs/image/components";
import GraphicDesign from '../assets/graph-des.png';
import WebDesign from '../assets/web-dev.png';
import Marketing from '../assets/dig-mark.png';
import VideoProd from '../assets/3d-video.png';


const features = [
  {
    title: "Brand Strategy.",
    description:
      "We create data-driven brand strategies that align with your target market naturally, avoiding huge marketing costs and churn in the future.",
    imgsrc: GraphicDesign,
    imgalt: "Brand Design and strategy direction for the age of social marketing.",
    link: "/brand-strategy",
    style: "outline",
    btntxt: "Brand Strategy",
    buylink: "/stripelink",
    buystyle: "primary",
    buybtntxt: "Purchase",
  },
  {
    title: "Web Design.",
    description:
      "We've designed and developed over 200 websites over 10 years in the industry. Wordpress, Shopify or Velocity7, we've got you covered.",
    imgsrc: WebDesign,
    imgalt: "Gold Coast's best web design and development agency with over 10 years experience.",
    link: "/web-design",
    style: "outline",
    btntxt: "Web Design",
    buylink: "/stripelink",
    buystyle: "primary",
    buybtntxt: "Purchase",
  },
  {
    title: "Marketing.",
    description:
      "We design and manage complete marketing strategies, from animated ad sets for Google Display Network to Lead Gen automation setup.",
    imgsrc: Marketing,
    imgalt: "Ad strategy management on the Gold Coast without the giant fees.",
    link: "/marketing",
    style: "outline",
    btntxt: "Marketing",
    buylink: "/stripelink",
    buystyle: "primary",
    buybtntxt: "Purchase",
  },
  {
    title: "Ad Production.",
    description:
      "Let our team come in for a highly structured day of professional video production, resulting in months worth of video content for your business.",
    imgsrc: VideoProd,
    imgalt: "3D Video Design and Videography Production for Marketing",
    link: "/video-ads",
    style: "outline",
    btntxt: "Videography",
    buylink: "/stripelink",
    buystyle: "primary",
    buybtntxt: "Purchase",
  },
];
---

<style>
    /* Glass-card effect dial in, needs a moving background css only if possible */
    #glass-card {
    border-radius: 30px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(30px);
    border: 2px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    padding: 30px 15px;
    margin: 0 10px;
    transition-duration: 200ms;
  }
  #glass-card:hover {
    box-shadow: 0 40px 60px 0px #0000001a, 0 20px 40px 0px #0000000d;
  }
</style>

<main class="my-16 md:my-32">
  <div class="mb-8">
    <h3 class="text-3xl lg:text-5xl font-bold lg:tracking-tight">
      Design, Develop. Market, Moonshot.
    </h3>
    <p class="text-lg mt-4 max-w-7xl text-slate-600">
      We've got you covered from A-Z of online business development, backed by over 10+ years of experience scaling global brands. 
      We couldn't stand watching businesses burn money with digital marketing agencies that don't take real responsibility. 
      <i>We're changing that.</i>
    </p>
  </div>

  <div class="grid md:grid-cols-2 my-16 gap-8">
    {
      features.map((item) => (
        <div class="flex gap-4 items-start">
          <div id="glass-card" class="w-full h-full flex flex-col lg:flex-row">
            <div id="imgContainer" class="mt-1 w-24 h-24 md:w-48 md:h-48">
              <Picture
                    src={item.imgsrc}
                    sizes="(max-width: 1000px) 1000px, 500px"
                    widths={[500, 1000]}
                    aspectRatio="1:1"
                    background="#f2f2f2"
                    fit="cover"
                    position="center"
                    class="w-full rounded transition group-hover:-translate-y-1 group-hover:shadow-xl"
                  />
            </div>
            <div>
              <h3 class="font-semibold text-2xl">{item.title}</h3>{" "}
              <p class="text-slate-700 text-xs md:text-sm max-w-3xl mt-2 mb-6 leading-relaxed">{item.description}</p>
              <Link 
                class="mr-4"
                href={item.link || "#"}
                block
                style={item.style ? "primary" : "outline"}>
                {item.btntxt || "Get Started"}
              </Link>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</main>