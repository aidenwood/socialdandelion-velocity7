---
// @ts-ignore
import { Icon } from "astro-icon";
import Link from "@components/ui/link.astro";
import { Picture } from "@astrojs/image/components";
import GraphicDesign from '../assets/graph-des.png';
import WebDesign from '../assets/web-dev.png';
import Marketing from '../assets/dig-mark.png';
import VideoProd from '../assets/3d-video.png';


const features = [
  {
    title: "Organic Growth.",
    description:
      "Unlock the power of organic growth strategies that drive results without the need for constant design changes or large advertising budgets.",
    iconname: "ph:flower-light",
    link: "/products",
    style: "outline",
    btntxt: "More info",
  },
  {
    title: "Social Management.",
    description:
      "Experience award-winning web design and leverage over 10 years of expertise in high-performance web development.",
    iconname: "ph:share-network",
    link: "/products",
    style: "outline",
    btntxt: "More info",
  },
  {
    title: "Communication.",
    description:
      "Deploy and scale effective marketing campaigns tailored to the unique needs of local businesses and global brands.",
    iconname: "ph:chat-dots",
    link: "/products",
    style: "outline",
    btntxt: "More info",
  },
];

---

<style>
    /* Glass-card effect dial in, needs a moving background css only if possible */
    #glass-card {
    border-radius: 30px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(30px);
    border: 2px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    padding: 30px 15px;
    margin: 0 10px;
    transition-duration: 200ms;
  }
  #glass-card:hover {
    box-shadow: 0 40px 60px 0px #0000001a, 0 20px 40px 0px #0000000d;
  }
</style>

<main class="my-16 md:my-32">
  <div class="mb-8">
    <h2 class="text-2xl md:text-3xl lg:text-5xl font-bold lg:tracking-tight">
      Take back your time with our efficient social media management services.
    </h2>
    <div class="flex flex-col lg:flex-row">
    <p class="w-full lg:w-1/2 text-sm lg:text-lg pr-4 lg:pr-8 mt-4 max-w-6xl text-slate-600"> 
      Time is a valuable resource, especially for busy business owners. At The Social Dandelion, 
      we understand this, which is why our social media management services are designed to save 
      you time. 
      
    </p>
    <p class="w-full lg:w-1/2 text-sm lg:text-lg pr-4 lg:pr-8 mt-4 max-w-6xl text-slate-600"> 
      By handling the day-to-day tasks of content creation, scheduling, and engagement, we free up 
      your schedule, allowing you to focus on other important aspects of your business, while still 
      having confidence and measurable results.
    </p>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 my-16 gap-4">
    {
      features.map((item) => (
        <div class="flex gap-4 items-start">
          <div id="glass-card" class="w-full h-full flex flex-row md:flex-col items-center">
            <div id="imgContainer" class="mt-1 w-1/4 md:w-48 md:h-48 xl:w-64 xl:h-64 px-4">
              <Icon class="w-32" name={item.iconname} />
            </div>
            <div id="textContainer" class="w-3/4 md:w-full p-4">
              <h3 class="font-semibold text-lg md:text-xl lg:text-2xl">{item.title}</h3>{" "}
              <p class="text-slate-700 text-xs md:text-md max-w-3xl mt-2 mb-6 leading-relaxed">{item.description}</p>
              <Link 
                class="mr-4"
                href={item.link || "#"}
                block
                style={item.style ? "primary" : "outline"}>
                {item.btntxt || "Get Started"}
              </Link>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</main>