---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Detailedfooter from "@components/detailed-footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import '../styles/main.css';

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Gold Coast Web Design & Marketing"
  : "Aidxn Design, award-winning Gold Coast web design & monthly marketing management at a fixed price.";
---


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml">
    
    <!-- preload custom font -->
    <link
    rel="preload"
    href="/fonts/Inconsolata-Variable.ttf"
    as="font"
    type="font/ttf"
    crossorigin
    />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Cutting Edge Web Design & Marketing Automation on the Gold Coast. Refresh your brand and get a faster, more competitive website for less with Velocity7, our in-house website framework."
      canonical={canonicalURL}
      twitter={{
        creator: "@aidenwood",
        site: "@aidxn.com",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Aidxn Design - Gold Coast Web Design & Marketing`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Cutting Edge Web Design & Marketing Automation on the Gold Coast. Refresh your brand and get a faster, more competitive website for less with Velocity7, our in-house website framework.",
        },
      }}
    />
    
