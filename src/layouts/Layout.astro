---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Detailedfooter from "@components/detailed-footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import '../styles/main.css';

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "The Social Dandelion | Thrive organically"
  : "Helping small Australian businesses thrive on instagram with organic social media strategies and management. Located in Bellingen, NSW. Contact today about organic marketing management and social media brand redesigns.";
---


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml">
    
    <!-- preload custom font -->
    <link
    rel="preload"
    href="/fonts/Alice.ttf"
    as="font"
    type="font/ttf"
    crossorigin
    />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Boosting presence for small businesses around Australia. Thrive organically on instagram, management with $0 in ad spend."
      canonical={canonicalURL}
      twitter={{
        creator: "@aidenwood",
        site: "@aidxn.com",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `The Social Dandelion | Thrive organically`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Boosting presence for small businesses around Australia. Thrive organically on instagram, management with $0 in ad spend.",
        },
      }}
    />
    

  </head>

  <style>
    html { max-width: 100vw; overflow-x: hidden; background-color: #f1dfda; }
  </style>
  
  <body class="">
    <Navbar />
    <slot />
    <Detailedfooter />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
